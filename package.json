{
  "private": true,
  "name": "sls",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender --clean --template src/index.ejs --service-worker=false",
    "serve": "npm run build && preact serve",
    "dev": "preact watch --template src/index.ejs",
    "dist": "microbundle --entry src/components/hello-world/index.js"
  },
  "lint-staged": {
    "*.{css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@types/d3-drag": "^1.2.3",
    "@types/d3-force": "^1.2.1",
    "@types/d3-selection": "^1.4.1",
    "d3-drag": "^1.2.5",
    "d3-force": "^2.0.1",
    "d3-selection": "^1.4.1",
    "eslint-plugin-preact": "^0.1.0",
    "if-env": "^1.0.4",
    "microbundle": "^0.11.0",
    "preact": "^10.3.1",
    "preact-habitat": "^3.3.0",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "preact-widget-scripts": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "css-loader": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.19.1",
    "sirv-cli": "^1.0.0-next.3",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
